@page
@model Lana_jewelry.Pages.Transports.TransportPage

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-page-handler="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transports[0].CostumerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transports[0].TransportPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transports[0].TransportDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transports) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportDuration)
            </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.TransportId">Edit</a> |
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.TransportId">Details</a> |
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.TransportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
