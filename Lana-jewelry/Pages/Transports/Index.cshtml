@page
@model Lana_jewelry.Pages.TransportPage
@{
     Layout = "_Index";
}
<body>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].CostumerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].TransportPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].TransportDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportDuration)
            </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a> &nbsp;
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.Id">Details</a> &nbsp;
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
