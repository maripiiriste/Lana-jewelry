@page
@model Lana_jewelry.Pages.Party.InfosPage

@{
     Layout = "_Index";
}

<body>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Items[0].Country)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].City)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Region) </th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Street)</th>
            <th> @Html.DisplayNameFor(model => model.Items[0].StreetNumber)</th>
            <th> @Html.DisplayNameFor(model => model.Items[0].ZipCode) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].EmailAddress)</th>
            <th> @Html.DisplayNameFor(model => model.Items[0].PhoneNumber)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                 <a asp-page="./Edit" 
                   asp-page-handler="Edit" 
                   asp-route-id="@item.Id"
                  asp-page-order="@Model.CurrentSort"
                   asp-page-idx="@Model.PageIndex" 
                   asp-page-filter="@Model.CurrentFilter"
                >Edit</a>&nbsp;
                <a asp-page="./Details" 
                   asp-page-handler="Details"
                   asp-route-id="@item.Id"
                  asp-page-order="@Model.CurrentSort"
                   asp-page-idx="@Model.PageIndex" 
                   asp-page-filter="@Model.CurrentFilter"
                >Details</a>&nbsp;
                <a asp-page="./Delete" 
                   asp-page-handler="Delete"
                   asp-route-id="@item.Id"
                  asp-page-order="@Model.CurrentSort"
                   asp-page-idx="@Model.PageIndex" 
                   asp-page-filter="@Model.CurrentFilter"
                >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</body>
